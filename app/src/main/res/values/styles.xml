<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="nav.Btn" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="android:color">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="colorControlHighlight">@color/colorLightBlue</item>
        <item name="android:background">@drawable/nav_btn</item>
    </style>

    <style name="navAdd.Btn" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="android:color">@color/colorLightBlue</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">@drawable/nav_btn</item>
    </style>

    <style name="transactionList" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="android:radius">20dp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:background">@drawable/list_item</item>
    </style>

</resources>
