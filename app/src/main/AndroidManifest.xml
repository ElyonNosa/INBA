        <activity
            android:name=".presentation.SettingsActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustPan" >
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
        <activity
            android:name=".presentation.ProfileActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustPan" >
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
        <activity
            android:name=".presentation.DashboardActivity"
            android:exported="false">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
        <activity
            android:name=".presentation.ViewTransactionActivity"
            android:exported="true">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="comp3350.inba.presentation.DashboardActivity" />
        </activity>
        <activity
            android:name=".presentation.TransactionsActivity"
            android:label="@string/title_activity_transactions"
            android:windowSoftInputMode="adjustPan" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="comp3350.inba.presentation.DashboardActivity" />
        </activity>
    </application>

</manifest>